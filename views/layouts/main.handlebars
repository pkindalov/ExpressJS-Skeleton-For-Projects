<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Cool Blog System</title>
    <!-- Bootstrap CSS from CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <!-- Left-aligned links for navigation -->
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/">HOME</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/about">ABOUT</a>
            </li>
          </ul>
          <!-- Center-aligned logo -->
          <a
            class="navbar-brand mx-0 mx-md-auto"
            href="/"
            style="flex-grow: 1; text-align: center;"
          >My Cool Blog System</a>
          <!-- Right-aligned user menu -->
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            {{#if currentUser}}
              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle"
                  href="#"
                  id="navbarDropdown"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  {{currentUser.username}}
                </a>
                <ul
                  class="dropdown-menu dropdown-menu-end"
                  aria-labelledby="navbarDropdown"
                >
                  <li><a
                      class="dropdown-item"
                      href="/users/profile/{{currentUser.username}}"
                    >Profile</a></li>
                  <li><hr class="dropdown-divider" /></li>
                  <li>
                    <form
                      class="d-none"
                      id="logout-form"
                      action="/users/logout"
                      method="POST"
                    ></form>
                    <a
                      class="dropdown-item"
                      href="#"
                      onclick="document.getElementById('logout-form').submit(); return false;"
                    >Logout</a>
                  </li>
                </ul>
              </li>
            {{else}}
              <li class="nav-item">
                <a class="nav-link" href="/users/register">REGISTER</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/users/login">LOGIN</a>
              </li>
            {{/if}}
          </ul>
        </div>
      </nav>
    </header>

    <main class="container mt-4">
      {{#if globalError}}
        <div class="alert alert-danger" role="alert">
          {{globalError}}
        </div>
      {{/if}}
      {{{body}}}
    </main>

    <footer class="footer bg-light text-center py-3 mt-5">
      <div class="container">
        <span class="text-muted">Â© 2024 My Cool Blog System</span>
      </div>
    </footer>

    <!-- Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>